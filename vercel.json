
{
  "version": 2,
  "buildCommand": "npm run build && chmod +x build-hooks.sh && ./build-hooks.sh",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.mjs" },
    { "source": "/Visible Ores.mcpack", "destination": "/public/Visible Ores.mcpack" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "functions": {
    "api/index.mjs": {
      "includeFiles": "public/**,attached_assets/**,dist/**"
    }
  }
}
